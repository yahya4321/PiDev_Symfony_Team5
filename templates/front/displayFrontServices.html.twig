                                <div class="ser_title098">
                                    <h4 class="_ser_title"><a href="{{ path('detailServices',{servid:s.servid}) }}">{{ s.servlib }}</a></h4>
                                </div>
                                <div class="_oi0po"><i class="fa fa-bolt"></i>Ã  partir de<strong class="theme-cl">{{ s.servprix }} DT</strong></div>
