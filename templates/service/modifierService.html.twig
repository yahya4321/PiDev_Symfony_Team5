
{% extends 'baseBack.html.twig' %}
{% block tableForm %}
<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 0px; padding: 10px;">

                <div class="card">

                    <div class="card-body">

                        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Libellé</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servlib,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.servlib,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-4 col-form-label">Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servdesc,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.servdesc,{'attr':{'class':'text-danger'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Disponibilité</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servdispo,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.servdispo,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-4 col-form-label">Image</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servimg,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Prix</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servprix,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.servprix,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>


                        <div class="row mb-1">
                            <label for="inputNumber" class="col-sm-4 col-form-label">Catégorie</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.catlib,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.catlib,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Ville</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.servville,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.servprix,{'attr':{'class':'text-danger'}}) }}
                            </div>
                            <br/>
                            <br/>
                            <div class="row mt-4">
                                <div class="col-md-8 offset-md-2 d-flex justify-content-center align-items-center">
                                    <button type="submit" class="btn btn-success btn-rounded px-4 me-3">Enregistrer</button>
                                    <a href="{{ path('display_services') }}" class="btn btn-outline-danger btn-rounded px-3">
                                        <i class="fas fa-arrow-left me-2"></i> Retour
                                    </a>
                                </div>
                            </div>

                            {{ form_end(f) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div></div>
{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

    <link href="{{ asset('assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/boxicons/css/boxicons.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/quill/quill.snow.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/quill/quill.bubble.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/remixicon/remixicon.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/simple-datatables/style.css') }}" rel="stylesheet">
    <link
            href="{{ asset('front/css/plugins.css')}}" rel="stylesheet">


    <!-- Custom CSS -->
    <link
            href="{{ asset('front/css/styles.css')}}" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
{% endblock %}